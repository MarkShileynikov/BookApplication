<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YellowButtonStyle">
        <item name="android:background">@drawable/rounded_yellow_button</item>
        <item name="backgroundTint">@color/yellow_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_width">18dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="CardTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/card_background</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


</resources>